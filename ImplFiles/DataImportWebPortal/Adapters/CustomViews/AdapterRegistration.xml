<?xml version="1.0" encoding="utf-8"?>
<!--
	This configuration file contains details to register the business
	adapter in this folder with the business importer portal module.
-->
<BusinessAdapterRegistration>
	<!-- Text to be displayed in drop down list for selecting which data file type to import -->
	<DisplayName>Custom Views Import</DisplayName>

	<!--
		Description of this import to be displayed below drop down list when it is selected.
		Default: Blank (no description)
	-->
	<DisplayDescription>
		Import definitions of SQL Views in an xml file that you upload.
	</DisplayDescription>

	<!--
		Text to be displayed to prompt user to select a file
		to be uploaded.

		Default if not specified:
		"Select the file to upload and import:"
	-->
	<SelectFileLabel>
		Select the xml file containing the SQL View definitions to import:
	</SelectFileLabel>

	<!-- Expected extension of files that are uploaded (typically "xls", "xlsx", "csv" or "xml") -->
	<UploadFileType>xml</UploadFileType>

	<!--
		Text to display on the "Upload" button to upload
		and queue a file for importing.

		Default if not specified: "Upload"
	-->
	<ImportButtonText>Import SQL View Definitions</ImportButtonText>

	<!--
		Text to display in a link to download a template
		file with the correct structure to be populated for
		importing via this adapter.

		Default if not specified: "Download template"
	-->
	<TemplateFileHyperlinkDescription>
		Download Template SQL Definitions File
	</TemplateFileHyperlinkDescription>

	<!-- Name of the template file. Leave this blank if there is no template file. -->
	<TemplateFileName>View_Definitions_Template.xml</TemplateFileName>

	<!-- MGSBI config file containing the adapter definition to be executed -->
	<ConfigFile>MGSBI.xml</ConfigFile>

	<!-- Name of the import in ConfigFile to be executed -->
	<ImportName>ViewDefinitionImport</ImportName>
</BusinessAdapterRegistration>
